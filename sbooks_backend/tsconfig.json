{
  "compileOnSave": true,
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "moduleResolution": "node",
    "declaration": false,
    "preserveConstEnums": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "alwaysStrict": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "typeRoots": [
      "node_modules/@types"
    ],
    "resolveJsonModule": true,
    "allowJs": true
  },
  "include": [
    "./src/*",
    "src/pagination/fastifyPagination.d.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}